<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <h1><%= title %></h1>
    <form method="POST" action="/edit">
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Task</th>
                </tr>
            </thead>
            <tbody>
                <% let counter = 0 %>
                <% list.forEach(item => { %>
                    <% counter ++ %>
                    <tr>
                        <td><%= counter %></td>
                        <td><input 
                            type="text" 
                            value="<%= item.description %>"
                            name="description">
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <div class="button_wrapper">
            <input class="button large" type="submit" value="Save changes">
        </div>
    </form>
</body>
</html>
